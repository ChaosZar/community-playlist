<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cp.chaos.org.communityplaylist.SearchActivity">

    <Button
            android:text="@string/searchButtonText"
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:id="@+id/searchButton"
            android:onClick="searchClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/backToOverviewButtonText"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:id="@+id/backToOverviewButton"
            android:onClick="backToOverviewClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintVertical_bias="0.995"/>
    <EditText
            android:layout_width="258dp"
            android:layout_height="37dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/searchEditText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017" app:layout_constraintHorizontal_bias="0.078"/>

    <ListView
            android:layout_width="368dp"
            android:layout_height="390dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.495" android:id="@+id/searchResultListView"/>

</android.support.constraint.ConstraintLayout>
